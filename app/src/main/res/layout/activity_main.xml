<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROLL"
        android:id="@+id/rollButton"
        android:layout_centerVertical="true"
        android:onClick="rollDice"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOLD"
        android:id="@+id/holdButton"
        android:layout_alignBaseline="@+id/rollButton"
        android:layout_alignBottom="@+id/rollButton"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/resetButton"
        android:layout_alignBottom="@+id/rollButton"
        android:layout_alignBaseline="@+id/rollButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rollButton"
        android:text="Your score: 0 | Computer score: 0"
        android:textSize="20dp"
        android:textColor="@color/primary_dark_material_dark"
        android:id="@+id/totalscore"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rollButton"
        android:layout_centerHorizontal="true"
        android:text="Click on play"
        android:id="@+id/disp"
        android:layout_margin="30dp"
        android:textAppearance="?android:textAppearanceLarge"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/holdButton"
        android:src="@drawable/one"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:elevation="1dp"
        android:id="@+id/image"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/turnscore"
        android:layout_below="@+id/disp"
        android:text="Turn Score: "
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primary_dark_material_dark"
        />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/play"
        android:clickable="true"
        android:id="@+id/play"
        />





</RelativeLayout>